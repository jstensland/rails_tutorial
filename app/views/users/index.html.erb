<% provide(:title, 'All users') %>
<h1>All users</h1>

<!-- will_paginate to paginate list items.  Other things appear on all pages-->
<!-- requires use to use User.paginate(page: params[:page]) in controller-->
<%= will_paginate %> 

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user, size: 50 %>
      <%= link_to user.name, user %>
    </li>
  <% end %>
</ul>

<!-- included as a second menu to switch pages with -->
<%= will_paginate %> 